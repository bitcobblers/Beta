{
   "tasks": [
      {
         "name": "dotnet-format",
         "group": "pre-commit",
         "command": "dotnet",
         "args": [ "format", "--verbosity", "normal", "--include", "${staged}" ],
         "include": [ "**/*.cs" ]
      }, {
         "name": "run-tests",
         "group": "pre-push",
         "command": "dotnet",
         "args": [ "test", "-c", "Release" ]
      }
   ]
}